<script>
    const weatherIcons = ['üå§Ô∏è', '‚òÄÔ∏è', 'üå•Ô∏è', '‚õÖ', 'üå¶Ô∏è'];
    const weatherElement = document.querySelector('.weather');

    function updateWeather() {
        const temperature = Math.floor(Math.random() * (95 - 65) + 65);
        const randomIcon = weatherIcons[Math.floor(Math.random() * weatherIcons.length)];
        
        weatherElement.innerHTML = `
            <div class="weather-icon">${randomIcon}</div>
            <div>${temperature}¬∞F | Silicon Valley, CA</div>
        `;
    }

    setInterval(updateWeather, 300000); // Update every 5 minutes
    updateWeather(); // Initial update

    function connectWallet() {
        alert('Connecting to AI Profile...');
        setTimeout(() => {
            alert('AI Profile connected! Welcome, Innovative User.');
        }, 2000);
    }

    function likePost(button) {
        button.innerHTML = button.innerHTML === 'Like' ? 'Liked' : 'Like';
    }

    function commentPost(button) {
        const comment = prompt('Enter your comment:');
        if (comment) {
            const post = button.closest('.post');
            const newComment = document.createElement('p');
            newComment.textContent = `Reply: ${comment}`;
            post.appendChild(newComment);
        }
    }

    function sharePost(button) {
        const post = button.closest('.post').querySelector('p').textContent;
        alert(`Sharing: "${post}"`);
    }
</script>

